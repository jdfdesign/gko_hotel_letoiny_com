  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>

    <h3><%= t("form.inquiry.title")%></h3>
  </div>
  <%= simple_form_for(:inquiry, :url => inquiries_path,
                      :html => {:remote => true, :method => :post, :class => [:inquiry]}) do |form| %>
