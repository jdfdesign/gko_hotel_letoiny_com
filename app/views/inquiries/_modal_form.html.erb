        <div class='span12'>
          <div class='modal-footer'>
            <%= form.button :submit, t("send_inquiry"), :disable_with => "Saving...", :class => "btn btn-block btn-primary" %>
          </div>
        </div>
      </div>
  <% end %>
</div>