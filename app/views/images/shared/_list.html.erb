<%
image_geometry = local_assigns.has_key?(:image_style) ? image_style : :large
thumb_geometry = local_assigns.has_key?(:thumb_style) ? thumb_style : :small
%>
<% if images.any? %>
  <div class='images'>
  <% images.each do |img| %>
      <%= link_to(image_fu(img, thumb_geometry), img.thumbnail(image_geometry).url) %> 
  <% end %>
  </div>    
<% end %> 
 
