<%
has_left_sidebar = content_for?(:left_sidebar) 
has_sidebar = content_for?(:sidebar_header) || content_for?(:sidebar)
@background_images ||= site.home.images.order(:position)
%>
<!DOCTYPE html>
<head>
	<meta charset="utf-8" />
	<title><%= @meta_title || site.title %></title>
	<!-- Set the viewport width to device width for mobile -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="<%= @meta_description %>" />
  <meta name="keywords" content="<%= @meta_keywords %>" />

  <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
 
  <!-- Le styles -->
  <%= stylesheet_link_tag "public" %>

  <!-- Le fav and touch icons -->
  <!-- <link rel="shortcut icon" href="assets/ico/favicon.ico">
  <link rel="apple-touch-icon" href="assets/ico/apple-touch-icon.png">
  <link rel="apple-touch-icon" sizes="72x72" href="assets/ico/apple-touch-icon-72x72.png">
  <link rel="apple-touch-icon" sizes="114x114" href="assets/ico/apple-touch-icon-114x114.png"> --> 
   
	<% if site.preferred_typekit_key.present? %>
    <%= "<script type='text/javascript' src='http://use.typekit.com/#{site.preferred_typekit_key}.js'></script>".html_safe %>
    <%= "<script type='text/javascript'>try{Typekit.load();}catch(e){}</script>".html_safe %>
  <% end %>
  <%= yield :head %>
  <%= csrf_meta_tag %>
</head>
<body id='<%= @body_id %>'>
  <% if @background_images.any? %>
  <div id="wrapper-wide-background-slideshow" class="wrapper-wide <%= resource_instance_name %>">
    <div id="background-slideshow" class="container">
      <%= render :partial => 'images/shared/list', 
        :locals => { 
          :images => @background_images, 
          :image_style => '1024x768' } %>
    </div>
  </div>
  <% end %>
  <div id="wrapper-wide-body">
    
    <!-- Header
    ================================================== -->
    <%= render 'header' %>
    
    <!-- Content
    ================================================== -->
    <% if content_for?(:page_content) %>
      <%= yield :page_content %>
    <% else %>  
      <div id='content-container' class='container-fluid'>
        <!--<div class='wrapper-content'>-->
          <div id="content" class='row-fluid'>
          
          
            <div id='main-column' class='content-sidebar'>
              <div class="main-content-inner">
                <%= render "flash" %> 
                <%= yield %>
              </div>
            </div>
            <aside id='sidebar' class='right'>
              <div id='sidebar-header'><%= yield :left_sidebar %></div>
              <div id='sidebar-content'><%= yield :sidebar %></div>
            </aside>
          
        </div>
      </div>
      <% end %>  
      <%= link_to(image_tag("logo_relais_chateaux_white.png", :title => t("r_and_c"), :rel => "tooltip"), "http://www.relaischateaux.com/fr/search-book/hotel-restaurant/toiny/", :id => "logo_relais_chateaux", :target => "_blank") %>
      
      <!-- Footer
      ================================================== -->
      <%= render 'footer' %>

  </div>
  
  <%= render(:partial => "table_inquiries/modal_form") %>

  
  <!-- Le javascript
  ================================================== -->
  <!-- Placed at the end of the document so the pages load faster -->
	<%= javascript_include_tag "gko_public_all" %>
	<%= yield :after_javascript_libraries %>
	<%= javascript_include_tag "public" %>
	
  <!-- Analytics
  ================================================== -->
  <%= render 'google_analytics' %>
<body>
</html>