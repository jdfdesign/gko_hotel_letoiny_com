<% content_for :after_javascript_libraries do %>
<script type="text/javascript">
	$(document).ready(function() {
		$('input.ghost').hide();
	});
</script>
<% end %>
<% cache [I18n.locale, site,'modals'] do %>
<!-- Les modals
================================================== -->

<%= render "table_inquiries/modal_form" %>
<%= render "inquiries/modal_form" %>

<!-- modal-webcam is the modal dialog used for the image gallery -->
<div id="modal-webcam" class="modal hide fade" tabindex="-1">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">&times;</a>
        <h3 class="modal-title"></h3>
    </div>
    <div class="modal-body"></div>
</div>

<!-- modal-gallery is the modal dialog used for the image gallery -->
<div id="modal-gallery" class="modal modal-gallery hide fade" tabindex="-1">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">&times;</a>
        <h3 class="modal-title">Diaporama</h3>
    </div>
    <div class="modal-body"><div class="modal-image"></div></div>
    <div class="modal-footer">
        <a class="btn modal-next"><%= t("next") %> <i class="icon-arrow-right"></i></a>
        <a class="btn modal-prev"><i class="icon-arrow-left"></i> <%= t("previous") %> </a>
        <a class="btn modal-play modal-slideshow" data-slideshow="5000"><i class="icon-play"></i> Slideshow</a>
    </div>
</div>
<% end %>
