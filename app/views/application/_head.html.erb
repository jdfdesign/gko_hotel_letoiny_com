<head>
	<meta charset='<%= Rails.application.config.encoding %>' />
	<!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /><![endif]-->
	<title><%= @meta_title.html_safe %></title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<% if @meta_description.present? -%>
	  <meta name="description" content="<%= @meta_description.html_safe %>" />
	<% end -%>
	<% if @meta_robots.present? -%>
	  <meta name="robots" content="<%= @meta_robots.html_safe %>" />
	<% end -%>
	<% if @canonical.present? -%>
	  <link rel="canonical" content="<%= @canonical.html_safe %>" />
	<% end -%>
  <% @alternate_links.each do |link| %> 
    <%= raw link %> 
  <% end if @alternate_links.present? %>
	<%= yield :meta %>                                                
	<!-- Le styles -->
  <%= stylesheet_link_tag "public" %>
	<%= stylesheet_link_tag "gko_print", :media => "print" %>
  <%= raw %(<style type='text/css' media='all'>#{site.stylesheet}</style>) if site.stylesheet? -%>
	<link rel="shortcut icon" href="/favicon.ico">
	<%= include_gon(:camel_case => true) %>
  <%= render "typekit" %>
  <%= csrf_meta_tags if site.authenticity_token_on_frontend -%>
	<!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
	<!--[if lt IE 9]>
	 	<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
	<%= yield :head %>
</head>