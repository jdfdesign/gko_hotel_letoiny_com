<% cache [action_name, image_bank_photo.site, I18n.locale, image_bank_photo.section, image_bank_photo] do %>
<div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
  <div class="thumbnail">
	  <%= link_to(image_tag(image_bank_photo.source.url(:thumb), :class => "thumbnail"), image_bank_photo.source.url, :target => :blank) %>
    <div class="caption">
      <p><%= "ref: #{image_bank_photo.id} / #{number_to_human_size(image_bank_photo.size)}" %></p>
      <p><%= image_bank_photo.author if image_bank_photo.author.presence %></p>
    </div>
  </div>
</div>
<% end %>

